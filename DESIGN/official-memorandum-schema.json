
{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$defs": {
    "content": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string",
          "enum": ["markup","delta"],
          "description": "Content format type",
          "default": "markup"
        },
        "data": {
          "type": "string",
          "description": "String data in specified format",
        }
    }
  },
  "title": "Official Memorandum Schema",
  "description": "JSON schema for AFH 33-337 compliant official memorandum parameters",
  "type": "object",
  "properties": {
    "letterhead-title": {
      "type": "string",
      "description": "Letterhead title (e.g., DEPARTMENT OF THE AIR FORCE)",
      "default": "DEPARTMENT OF THE AIR FORCE"
    },
    "letterhead-caption": {
      "type": "string",
      "description": "Optional letterhead caption (e.g., unit name)",
      "default": "123RD EXAMPLE SQUADRON"
    },
    "body": {
      "type": "#/$defs/content",
      "description": "Main body content of the memorandum"
    },
    "date": {
      "type": ["string", "null"],
      "description": "Optional date in YYYY-MM-DD format; defaults to current date if omitted",
    },
    "memo-for": {
      "description": "Recipient(s) as an array of strings (at least one required)",
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "default": [
        "[FIRST/OFFICE]", "[SECOND/OFFICE]", "[THIRD/OFFICE]", "[FOURTH/OFFICE]", "[FIFTH/OFFICE]", "[SIXTH/OFFICE]"
      ]
    },
    "from-block": {
      "type": "array",
      "description": "Lines for sender office and address as array of strings",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "default": [
        "[YOUR/SYMBOL]",
        "[Your Organization Name]",
        "[Street Address]",
        "[City ST 12345-6789]"
      ]
    },
    "subject": {
      "type": "string",
      "description": "Memorandum subject line (required)",
      "minLength": 1,
      "default": "[Your Subject in Title Case - Required Field]"
    },
    "references": {
      "type": ["array", "null"],
      "description": "Optional array of reference documents",
      "items": {
        "type": "string"
      },
      "default": null
    },
    "signature-block": {
      "type": "array",
      "description": "Array of signature lines (minimum 2 required per AFH 33-337)",
      "items": {
        "type": "string"
      },
      "minItems": 2,
      "default": [
        "[FIRST M. LAST, Rank, USAF]",
        "[Your Official Duty Title]",
        "[Organization (optional)]"
      ]
    }
  },
  "required": [
    "memo-for", 
    "from-block",
    "subject",
    "signature-block",
    "body"
  ],
  "additionalProperties": false
}